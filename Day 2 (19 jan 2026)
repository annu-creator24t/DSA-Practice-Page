// code 1- Creating behaviours (methods)

class Student{
    void study(){
        // logic
        System.out.println("Student is studying");
    }
    void sleep(){
        System.out.println("Student is sleeping");
    }
}
public class Main
{
	public static void main(String[] args) {
		Student s1=new Student();
		s1.study(); //referring
		s1.sleep();
	}
}


//code 2 - reference 
public class Student{
int marks = 80;


public static void main(String[] args){
    Student s1 = new Student();
    System.out.println(s1.marks);  
 }
}


//code 3- multiple references 

class Student{
    int marks=80;
}
    
public class Main
{
	public static void main(String[] args) {
		Student s1=new Student();//refernce variable --s1(object)
		Student s2=s1; //same object
		s2.marks=90;
		s3.marks=100;
		System.out.println(s1.marks);
		System.out.println(s2.marks);
		System.out.println(s3.marks);
	}
}



//code -4 Dereferencing

class Student{
    int marks=80;
}
    
public class Main
{
	public static void main(String[] args) {
		Student s1=new Student();//refernce variable --s1(object)
		Student s2=s1; //same object
		s2=null;
		System.out.println(s1.marks);
		System.out.println(s2.marks); // if we run this we get null pointer exception
	
	}
}


//code -5 List
import  java.util.*;
class Student {
int id;

Student(int id){
    this.id=id;
  }
}
public class Main
{
	public static void main(String[] args) {
	    //syntax of ArrayList
	    //List <datatype> list_name=new ArrayList<>();
	  List<Student> students=new ArrayList<>();
	  
	  students.add(new Student(101));
	  students.add (new Student(102));
	  
	  for(Student s:students){
	      System.out.println(s.id);
	  }
	}
}

// code 6- Map

import  java.util.*;
class Student {
int id;

Student(int id){
    this.id=id;
  }
}
public class Main
{
	public static void main(String[] args) {
	    //syntax of Map
	   
	 Map<Integer,Student>map=new HashMap<>();
	   map.put(1,new Student(101));
	   map.put(2,new Student(102));
	  
	    System.out.println(map.get(1).id);
	    System.out.println(map.get(2).id);
	  }
	}



